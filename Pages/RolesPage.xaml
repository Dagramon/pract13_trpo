<Page x:Class="pract12_trpo.Pages.RolesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract12_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RolesPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button HorizontalAlignment="Left" Click="GoBack">Назад</Button>
            <Button HorizontalAlignment="Left" Click="AddRole">Добавить</Button>
            <Button HorizontalAlignment="Left" Click="AddRole">Удалить</Button>
        </StackPanel>
        <ListView Grid.Row="1"
                  ItemsSource="{Binding service.Roles}"
                  MouseDoubleClick="edit"
                  SelectedItem="{Binding current}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="Группа: "/>
                        <Run Text="{Binding Title}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ComboBox
                 x:Name="ComboBoxRoles"
                 SelectionChanged="ComboBoxRoles_SelectionChanged"
                 Grid.Column="1"
                 ItemsSource="{Binding service.Roles}"
                 DisplayMemberPath="Title"
                 SelectedItem="{Binding Role}"/>
        <ListView Grid.Row="1"
                  Grid.Column="1"
                  ItemsSource="{Binding users}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel>
                            <Label>Логин</Label>
                            <TextBox Text="{Binding Login}"></TextBox>
                        </StackPanel>
                        <StackPanel>
                            <Label>Имя пользователя</Label>
                            <TextBox Text="{Binding UserName}"></TextBox>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
