<Page x:Class="pract12_trpo.Pages.AddForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:validators="clr-namespace:pract12_trpo.Classes.Validations"
      xmlns:local="clr-namespace:pract12_trpo.Pages"
      xmlns:service="clr-namespace:pract12_trpo.Data.Service"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddForm">
    <Page.Resources>
        <service:RolesService x:Key="rService"/>
    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button HorizontalAlignment="Left" Click="GoBack">Назад</Button>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="auto">
            <StackPanel>
                <Label>Логин</Label>
                <TextBox x:Name="LoginTextBox">
                    
                    <TextBox.Text>
                        <Binding Path="Login" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:LoginValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=LoginTextBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Имя пользователя</Label>
                <TextBox x:Name="UserNameTextBox">
                    <TextBox.Text>
                        <Binding Path="UserName" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:StringValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=UserNameTextBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Почта</Label>
                <TextBox x:Name="EmailTextBox">
                    <TextBox.Text>
                        <Binding Path="Email" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:EmailValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=EmailTextBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Пароль</Label>
                <TextBox x:Name="PasswordBox">
                    <TextBox.Text>
                        <Binding Path="Password" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:PassValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=PasswordBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Группа</Label>
                <ComboBox ItemsSource="{Binding Source={StaticResource rService}, Path=Roles}"
                          DisplayMemberPath="Title"
                          SelectedItem="{Binding Role}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="ProfilePanel"
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label>Включить профиль пользователя</Label>
            <CheckBox x:Name="CheckBoxProfile" Checked="CheckBoxProfile_Checked"/>
            <StackPanel>
                <Label>Ссылка на аватар</Label>
                <TextBox x:Name="AvatarUrlTextBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.AvatarUrl" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:StringValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=AvatarUrlTextBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Номер телефона</Label>
                <TextBox x:Name="PhoneTextBox">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Phone" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:PhoneValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=PhoneTextBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label Content="Дата рождения"/>
                <DatePicker x:Name="BirthdayPicker" AutomationProperties.Name="">
                    <DatePicker.SelectedDate>
                        <Binding Path="UserProfile.Birthday" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:DateValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </DatePicker.SelectedDate>
                </DatePicker>
                <ItemsControl Style="{StaticResource ErrorText}"
                                      ItemsSource="{Binding ElementName=BirthdayPicker, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <Label>Краткое описание</Label>
                <TextBox x:Name="BioTextBox" Style="{StaticResource BigTextBox}">
                    <TextBox.Text>
                        <Binding Path="UserProfile.Bio" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:StringValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Style="{StaticResource ErrorText}"
                              ItemsSource="{Binding ElementName=BioTextBox, Path=(Validation.Errors)}"
                              Width="200">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
        
        <Button Grid.ColumnSpan="2" Grid.Row="1"
                VerticalAlignment="Bottom"
                Click="Save" Style="{StaticResource GreenButton}">Сохранить</Button>
    </Grid>
</Page>
