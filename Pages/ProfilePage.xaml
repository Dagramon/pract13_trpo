<Page x:Class="pract12_trpo.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract12_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="auto"/>
        <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button HorizontalAlignment="Left" Click="GoBack">Назад</Button>
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Grid.Row="1">
            <Image x:Name="Avatar"
                Source="..\Images\Error.png"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ссылка на аватар: "/>
                <TextBlock Text="{Binding UserProfile.AvatarUrl}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Номер телефона: "/>
                <TextBlock Text="{Binding UserProfile.Phone}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата рождения: "/>
                <TextBlock Text="{Binding UserProfile.Birthday, StringFormat={}{0:dd.MM.yyyy}}"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Описание: "/>
                <TextBlock Text="{Binding UserProfile.Bio}"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
